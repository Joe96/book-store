<section class="book">
  <img src={{book.bookCover}}>
  <div class="book-details">
    <h3>{{book.title}}</h3>
    <p>By: {{book.author}}</p>
    <p>Description: {{book.description}}</p>
  </div>
</section>
  
  <div class="comment-card">
    <form class="form comment-form" id="new-comment-form">
      <div>
        <input type="hidden" name="book_id" id="book_id" value="{{book.id}}" />
        <label for"comment">Comment:</label>
        <textarea class="form-imput" type="text" id="comment"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="comment-btn" type="submit">Submit Comment</button>
      </div>
    </form>
  </div>
  <button class="btn btn-primary" id="cart-btn" type="submit">Add to Cart</button>

  <script src='/js/comment.js'></script>