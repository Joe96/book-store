<section class="card single-book">
  <img src={{book.bookCover}} id="book-img">
  <div class="book-details">
    <h3>{{book.title}}</h3>
    <p>By: {{book.author}}</p>
    <p>Description: {{book.description}}</p>
  </div>
</section>
{{#each book.comments as |comment|}}
  <section class="comment-card">
      <div class="card-body">
        <p>{{comment.body}}</p>
        <p>{{comment.user.username}}</p>
      </div>
  </section>
{{/each}}

  
  <div class="comment-card">
    <form class="form comment-form" id="new-comment-form">
      <div>
        <input type="hidden" name="book_id" id="book_id" value="{{book.id}}" />
        <input type="hidden" name="user_id" id="user_id" value="{{user.id}}" />
        <label for"comment">Comment:</label>
        <textarea class="form-imput" type="text" id="comment"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="comment-btn" type="submit">Submit Comment</button>
      </div>
    </form>
  </div>

  <div class="addToCart-card">
    <form class="form comment-form" id="new-cart-form">
      <div>
        <input type="hidden" name="book1_id" id="book1_id" value="{{book.id}}" />
        <input type="hidden" name="book1_price" id="book1_price" value="{{book.price}}" />
        <input type="hidden" name="user_id" id="qty_user_id" value="{{user_id}}" />
        <label for"cart">Quantity:</label>
        <input class="form-imput" type="text" id="quantity">
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="cart-btn" type="submit">Add to Cart</button>
      </div>
    </form>
  </div>
  </div>
  

  <script src='/js/comment.js'></script>