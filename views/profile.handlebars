<div class="text-center">
  <h2>welcome {{username}}</h2>

  <h4>Orders</h4>
  {{#each orders as |order|}}
    <section class="card">
    {{id}}
    {{quantity}}
    {{total}}
    </section>
  {{/each}}

  <h4>Comments</h4>
  {{#each comments as |comment|}}
    <section class="card">
    {{id}}
    {{book_id}}
    {{body}}
    </section>
  {{/each}}

</div>